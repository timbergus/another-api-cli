{
  "name": "{{ name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "main": "src/index.js",
  "author": "{{{ author }}}",
  "license": "{{ license }}",
  "private": {{ private }},
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "nyc --reporter=lcov node test.js | tap-spec"
  },
  "keywords": [
    "node",
    "mongo",
    "mongoose",
    "hapi",
    "jwt",
    "swagger"
  ],
  "dependencies": {
    {{#graphql}}
    "@risingstack/graffiti-mongoose": "6.0.0",
    {{/graphql}}
    "boom": "5.1.0",
    "chalk": "1.1.3",
    "good": "7.2.0",
    "good-console": "6.4.0",
    "good-squeeze": "5.0.2",
    {{#graphql}}
    "graphql": "0.9.2",
    {{/graphql}}
    "hapi": "16.3.0",
    "hapi-auth-bearer-token": "5.1.0",
    "hapi-swagger": "7.7.0",
    "inert": "4.2.0",
    "joi": "10.5.2",
    "jsonwebtoken": "7.4.1",
    {{#mongodb}}
    "mongoose": "4.9.3",
    {{/mongodb}}
    {{#mysql}}
    "mysql": "2.13.0",
    {{/mysql}}
    {{#postgresql}}
    "pg": "6.1.5",
    {{/postgresql}}
    {{#websockets}}
    "socket.io": "1.7.3",
    {{/websockets}}
    "vision": "4.1.1"
  },
  "devDependencies": {
    "eslint": "3.19.0",
    "jest-cli": "20.0.4",
    "nock": "9.0.13"
  },
  "engines": {
    "node": "7.7.x",
    "npm": "4.4.x"
  },
  "jest": {
    "testRegex": "/*.test.js$",
    "collectCoverage": true
  }
}
